#!/bin/sh -e

ruff_args="--fix"
for arg in "$@"; do
    if [ "$arg" = "--check" ]; then
        ruff_args="--show-source"
    fi
done

poetry run ruff forge "$ruff_args"
poetry run black forge "$@"

poetry run ruff tests "$ruff_args"
poetry run black tests "$@"

poetry run ruff quickstart.py "$ruff_args"
poetry run black quickstart.py "$@"
