#!/bin/sh -e
poetry run black forge --exclude migrations "$@"
poetry run isort forge --skip    migrations --skip template --profile black "$@"

# Format the template as-if not a part of forge"
poetry run isort forge/scaffold/template --skip    migrations --thirdparty forge --profile black "$@"

poetry run black tests "$@"
poetry run isort tests --profile black "$@"

poetry run black quickstart.py "$@"
poetry run isort quickstart.py --profile black "$@"
